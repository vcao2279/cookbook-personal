type User {
  id: ID! @unique
  name: String!
  email: String!
  password: String!
  recipes: [Recipe!]!
  createdAt: DateTime!
  updatedAt: DateTime!
}

type Recipe {
  id: ID! @unique
  title: String!
  image: String!
  readyInMinutes: Int!
  servings: Int!
  createBy: User!
  # ingredients
  # instructions
  createdAt: DateTime!
  updatedAt: DateTime!
}
